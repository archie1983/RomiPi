<?xml version="1.0" ?>
<robot name="romipi" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find romipi_description)/urdf/common_properties.xacro"/>
  <xacro:include filename="$(find romipi_description)/urdf/romipi.gazebo.xacro"/>

  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 0.00" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 3.14"/>
      <geometry>
        <mesh filename="package://romipi_description/meshes/bases/romi_base.stl" scale="1 1 1"/>
      </geometry>
      <material name="light_black"/>
    </visual>

    <collision>
      <origin xyz="0.0 0.0 0.0315" rpy="0 0 0"/>
      <geometry>
        <box size="0.1635 0.145 0.05"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0.0315" rpy="0 0 0"/>
      <mass value="8.2573504e-01"/>
      <!-- According to https://en.wikipedia.org/wiki/List_of_moments_of_inertia#List_of_3D_inertia_tensors 
      We want Ixx = (1/12) * m * (h^2 + l^2) = 0.068811253 * (0.05^2 + 0.1635^2) = 0.002011508 = 2.011508e-03
              Iyy = (1/12) * m * (w^2 + l^2) = 0.068811253 * (0.145^2 + 0.1635^2) = 0.003286236 = 3.286236e-03
              Izz = (1/12) * m * (w^2 + h^2) = 0.068811253 * (0.145^2 + 0.05^2) = 0.001618785 = 1.618785e-03
              -->
      <!--inertia ixx="2.2124416e-03" ixy="-1.2294101e-05" ixz="3.4938785e-05"
               iyy="2.1193702e-03" iyz="-5.0120904e-06"
               izz="2.0064271e-03" /-->
      <inertia ixx="2.011508e-03" ixy="0" ixz="0"
               iyy="3.286236e-03" iyz="0"
               izz="1.618785e-03" />
    </inertial>
  </link>

  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0.0 0.07 0.0345" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="wheel_left_link">
    <visual>
      <origin xyz="0 0.0 0.0" rpy="3.14 0 0"/>
      <geometry>
        <mesh filename="package://romipi_description/meshes/wheels/romi-left-wheel.stl" scale="1 1 1"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <!--cylinder length="0.018" radius="0.0345"/-->
        <cylinder length="0.018" radius="0.0345"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <!--cylinder length="0.018" radius="0.0345"/-->
        <cylinder length="0.018" radius="0.0345"/>
      </geometry>
      <mass value="2.8498940e-02" />
      
      <!-- According to https://en.wikipedia.org/wiki/List_of_moments_of_inertia#List_of_3D_inertia_tensors 
      We want Ixx = (1/12) * m * (3*r^2 + h^2) = 0.002374912 * (3 * 0.0345^2 + 0.018^2) = 0.00000925 = 9.25e-06
              Iyy = (1/12) * m * (3*r^2 + h^2) = 0.002374912 * (3 * 0.0345^2 + 0.018^2) = 0.00000925 = 9.25e-06
              Izz = (1/2) * m * r^2 = 0.01424947 * 0.0345^2 = 0.00001696 = 1.696e-05
              -->
      
      <!--inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" /-->
      
      <inertia ixx="9.25e-06" ixy="0" ixz="0"
               iyy="9.25e-06" iyz="0"
               izz="1.696e-05" />
      </inertial>
  </link>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0.0 -0.07 0.0345" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="wheel_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://romipi_description/meshes/wheels/romi-right-wheel.stl" scale="1 1 1"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <!--cylinder length="0.018" radius="0.033"/-->
        <cylinder length="0.018" radius="0.0345"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <mass value="2.8498940e-02" />
      
      <!-- According to https://en.wikipedia.org/wiki/List_of_moments_of_inertia#List_of_3D_inertia_tensors 
      We want Ixx = (1/12) * m * (3*r^2 + h^2) = 0.002374912 * (3 * 0.0345^2 + 0.018^2) = 0.00000925 = 9.25e-06
              Iyy = (1/12) * m * (3*r^2 + h^2) = 0.002374912 * (3 * 0.0345^2 + 0.018^2) = 0.00000925 = 9.25e-06
              Izz = (1/2) * m * r^2 = 0.01424947 * 0.0345^2 = 0.00001696 = 1.696e-05
              -->
      
      <!--inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" /-->
      
      <inertia ixx="9.25e-06" ixy="0" ixz="0"
               iyy="9.25e-06" iyz="0"
               izz="1.696e-05" />
      </inertial>
  </link>

  <joint name="caster_back_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back_link"/>
    <origin xyz="-0.0441 0.0435 0.0" rpy="0 0 0"/>
  </joint>

  <link name="caster_back_link">
    <visual>
      <origin xyz="0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://romipi_description/meshes/wheels/romi-back-castor.stl" scale="1 1 1"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0.0 -0.045 0.005" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.0005" />      
      <!-- According to https://en.wikipedia.org/wiki/List_of_moments_of_inertia#List_of_3D_inertia_tensors 
      We want Ixx = (1/12) * m * (h^2 + l^2) = 0.000041667 * (0.01^2 + 0.01^2) = 0.000000008 = 8e-09
              Iyy = (1/12) * m * (w^2 + l^2) = 0.000041667 * (0.01^2 + 0.01^2) = 0.000000008 = 8e-09
              Izz = (1/12) * m * (w^2 + h^2) = 0.000041667 * (0.01^2 + 0.01^2) = 0.000000008 = 8e-09
              -->
      <!--inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" /-->
      
      <inertia ixx="8e-09" ixy="0" ixz="0"
               iyy="8e-09" iyz="0"
               izz="8e-09" />
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="-0.032 0 0.068" rpy="0 0 0"/>
  </joint>

  <link name="imu_link"/>

</robot>
